﻿<h3>DeviceList</h3>
﻿@ExtraCaption
@{
    if (ShowButtons)
    {
        <br />
        <a href="@($"deviceadd")" class="btn btn-outline-primary">Add new Device</a>
    }
}
<table class="table">

    <thead>

        <tr>

            <th scope="col">Device Id</th>
            <th scope="col">Location</th>
            <th scope="col">Date</th>
            <th scope="col">Type</th>
            <th scope="col">Status</th>
            @if (ShowButtons)
            {
                <th scope="col"></th>
            }

        </tr>

    </thead>

    <tbody>

        @foreach (var device in Devices)
        {
            <tr>
                <td scope="row">@device.Id</td>
                <td scope="row">@device.Location</td>
                <td scope="row">@device.Date.ToString("yyyy-MM-dd")</td>
                <td scope="row">@device.DeviceType</td>
                <td scope="row">@device.Status</td>
                @{
                    if (ShowButtons)
                    {
                        <td scope="row">
                            <a href="@($"devicedetails/{device.Id}")" class="btn btn-outline-primary">Details</a>
                            <a href="@($"deviceupdate/{device.Id}")" class="btn btn-outline-primary">Update</a>
                            <a href="@($"devicedelete/{device.Id}")" class="btn btn-outline-primary">Delete</a>
                        </td>
                    }
                }
            </tr>
        }
    </tbody>
</table>

